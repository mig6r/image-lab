<?xml version='1.0' encoding='utf-8'?>
<widget id="io.digimig.image-lab" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Image-Lab</name>
    <description>
        Obtenez la couleur de vos images
    </description>
    <author email="s.opros@gmail.com" href="http://digimig.fr">
        SÃ©bastien Opros
    </author>
    <platform name="android">
        <icon density="ldpi" src="images/android/ldpi.png" />
        <icon density="mdpi" src="images/android/mdpi.png" />
        <icon density="hdpi" src="images/android/hdpi.png" />
        <icon density="xhdpi" src="images/android/xhdpi.png" />
    </platform>
    <allow-intent href="mailto:*" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-email" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <engine name="android" spec="^7.1.4" />
</widget>
